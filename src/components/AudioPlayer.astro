---
const { src } = Astro.props;
---

<div class="audio-player">
  <div class="audio-wave" id="wave" aria-hidden="true">
    <span></span><span></span><span></span><span></span><span></span>
  </div>

  <audio id="player" controls preload="metadata">
    <source src={src} type="audio/mpeg" />
    Il tuo browser non supporta l’audio HTML.
  </audio>
</div>

<script>
  // Attiviamo l'onda solo quando l’audio parte
  const audio = document.getElementById("player");
  const bars = document.querySelectorAll("#wave span");

  let ctx, analyser, source;

  audio.addEventListener("play", async () => {
    if (!ctx) {
      ctx = new AudioContext();
      analyser = ctx.createAnalyser();
      analyser.fftSize = 32;

      source = ctx.createMediaElementSource(audio);
      source.connect(analyser);
      analyser.connect(ctx.destination);
    }

    await ctx.resume();
    animate();
  });

  function animate() {
    if (audio.paused || audio.ended) return;

    const data = new Uint8Array(analyser.frequencyBinCount);
    analyser.getByteFrequencyData(data);

    bars.forEach((bar, i) => {
      const value = data[i] / 255;
      const h = 8 + value * 28;
      bar.style.height = `${h}px`;
      bar.style.opacity = 0.3 + value * 0.7;
    });

    requestAnimationFrame(animate);
  }
</script>

<style>
.audio-player {
  width: 100%;
  margin: 1.5rem 0;
  padding: 1.3rem 1rem;
  border-radius: 1rem;
  background: var(--color-surface-2, #f5f5f5);
  box-shadow: 0 2px 8px rgba(0,0,0,0.10);
  position: relative;
  overflow: hidden;
}

/* Onda sonora sopra il player */
.audio-wave {
  position: absolute;
  top: 0.6rem;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  gap: 4px;
  pointer-events: none;
}

.audio-wave span {
  width: 4px;
  height: 12px;
  background: var(--color-text, #333);
  border-radius: 4px;
  opacity: 0.4;
  transition: height 0.08s linear, opacity 0.1s linear;
}

/* Fascia del player più larga e più aderente */
.audio-player audio {
  width: 100%;
  height: 48px;             /* più alto */
  border-radius: 0.7rem;     /* più morbido */
  margin-top: 1.4rem;        /* spazio per l'onda */
  background: #222;          /* fascia scura */
}
</style>
